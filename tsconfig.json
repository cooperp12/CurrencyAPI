{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "experimentalDecorators": true, // Enable experimental support for decorators
    "emitDecoratorMetadata": true, // Emit design-type metadata for decorated declarations in source
    "types": [],
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports
    "forceConsistentCasingInFileNames": true // Ensure case consistency in file names
  },
  "exclude": ["node_modules", "./dist"]
}
